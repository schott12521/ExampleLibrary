{
  "preset": "simple",
  "scheme": "SEMVER",
  "verbosity": "INFO",
  "releaseLenient": true,
  "commitMessageConventions": {
    "enabled": ["conventional"],
    "items": {
      "conventional": {
        "expression": "^(feat|fix|chore|docs|style|refactor|test|perf)(\\([a-zA-Z0-9_\\-]+\\))?: .+$",
        "bumpExpressions": {
          "major": "^feat!|BREAKING CHANGE",
          "minor": "^feat",
          "patch": "^fix|chore|docs|style|refactor|test|perf"
        }
      }
    }
  },
  "releaseTypes": {
    "enabled": ["release"],
    "items": {
      "release": {
        "identifiers": []
      }
    }
  }
}